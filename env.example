# BTC LTP Service Configuration

# Server Configuration
PORT=8080

# Cache Configuration  
CACHE_BACKEND=memory  # Options: memory, redis
CACHE_TTL=30s

# Redis Configuration (when CACHE_BACKEND=redis)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Supported Trading Pairs (comma-separated)
SUPPORTED_PAIRS=BTC/USD,ETH/USD,LTC/USD,XRP/USD

# External API Configuration
KRAKEN_BASE_URL=https://api.kraken.com/0/public
KRAKEN_TIMEOUT=10s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json  # Options: json, text

# Health Check Configuration  
HEALTH_CHECK_TIMEOUT=5s

# Development/Testing
DEV_MODE=false
