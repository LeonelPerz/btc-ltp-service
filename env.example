# ============================================
# BTC LTP Service - Environment Configuration
# ============================================

# Server Configuration
PORT=8080
SHUTDOWN_TIMEOUT=30s

# Cache Configuration
CACHE_BACKEND=memory  # Options: memory, redis
CACHE_TTL=30s
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Exchange Configuration
KRAKEN_REST_URL=https://api.kraken.com/0/public
KRAKEN_WEBSOCKET_URL=wss://ws.kraken.com
KRAKEN_TIMEOUT=10s
KRAKEN_REQUEST_TIMEOUT=3s
KRAKEN_FALLBACK_TIMEOUT=15s
KRAKEN_MAX_RETRIES=3
KRAKEN_PRICE_CACHE_TTL=30s

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CAPACITY=100
RATE_LIMIT_REFILL_RATE=10

# Authentication Configuration (NEW)
AUTH_ENABLED=false                    # Toggle API key authentication
AUTH_API_KEY=                        # Your secret API key (required when AUTH_ENABLED=true)
AUTH_HEADER_NAME=X-API-Key           # Header name for API key
AUTH_UNAUTH_PATHS=/health,/ready,/metrics,/swagger/,/docs  # Comma-separated paths that don't require auth

# Logging Configuration
LOGGING_LEVEL=info    # Options: debug, info, warn, error
LOGGING_FORMAT=json   # Options: json, text

# Business Configuration
BUSINESS_SUPPORTED_PAIRS=BTC/USD,ETH/USD,LTC/USD,XRP/USD,BTC/EUR,ETH/EUR
BUSINESS_CACHE_PREFIX=price:

# Development Configuration
DEVELOPMENT_MOCK_MODE=false
DEVELOPMENT_DEBUG_MODE=false
DEVELOPMENT_DEV_MODE=false

# ============================================
# Quick Setup Examples
# ============================================

# Example 1: Enable authentication
# AUTH_ENABLED=true
# AUTH_API_KEY=mi-clave-secreta-2024

# Example 2: Use Redis cache
# CACHE_BACKEND=redis
# REDIS_ADDR=localhost:6379

# Example 3: Development mode
# DEVELOPMENT_DEV_MODE=true
# LOGGING_LEVEL=debug